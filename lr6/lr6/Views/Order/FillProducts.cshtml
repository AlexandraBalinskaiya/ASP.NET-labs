@model List<lr6.Models.Product>

<h2>Введіть дані про продукти</h2>

<form method="post" asp-action="FillProducts">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label>Назва продукту @(i + 1):</label>
            <input name="products[@i].Name" />
        </div>
        <div>
            <label>Кількість:</label>
            <input name="products[@i].Quantity" type="number" />
        </div>
    }
    <button type="submit">Завершити замовлення</button>
</form>
